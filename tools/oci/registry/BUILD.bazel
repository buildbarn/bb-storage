load("@io_bazel_rules_go//go:def.bzl", "go_binary", "go_library")
load("@rules_oci//oci:toolchain.bzl", "registry_toolchain")
load("@aspect_bazel_lib//lib:copy_file.bzl", "copy_file")

copy_file(
    name = "launcher",
    src = "launcher.sh",
    out = "launcher.bash",
)

registry_toolchain(
    name = "toolchain",
    launcher = "launcher.bash",
    registry = ":registry",
)

toolchain(
    name = "registry_toolchain",
    toolchain = ":toolchain",
    toolchain_type = "@rules_oci//oci:registry_toolchain_type",
)

go_library(
    name = "registry_lib",
    srcs = ["main.go"],
    importpath = "github.com/buildbarn/bb-storage/tools/oci/registry",
    visibility = ["//visibility:private"],
    deps = ["@com_github_google_go_containerregistry//pkg/registry"],
)

go_binary(
    name = "registry",
    embed = [":registry_lib"],
    visibility = ["//visibility:public"],
)

go_library(
    name = "rules_oci_lib",
    srcs = ["main.go"],
    importpath = "github.com/buildbarn/bb-storage/patches/rules_oci",
    visibility = ["//visibility:private"],
    deps = ["@com_github_google_go_containerregistry//pkg/registry:go_default_library"],
)
